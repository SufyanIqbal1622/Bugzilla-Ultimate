<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span> Projects </span>
      <%= link_to 'New Project', new_project_path, class:"btn btn-primary" %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class:"text-decoration-none" do %>
        <div class="card project-card mb-3">
          <div class="card-body">
            <span class="badge badge-<%=project.badge_color%> mb-3  "><%= project.status %></span>

            <h5 class="card-title text-dark "> <b> <%= project.title %> </b> </h5>
            <p class="text-secondary"><%= project.descreption %> </p>
          </div>
        </div>
      <%end %>
    <%end %>
  </div>
</div>
