<h1>Listing bugs</h1>

<table>
  <tr>
    <th>Problem statment</th>
    <th>Repro</th>
    <th>Result</th>
    <th>Expected result</th>
    <th>Status</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bugs.each do |bug| %>
  <tr>
    <td><%= bug.problem_statment %></td>
    <td><%= bug.repro %></td>
    <td><%= bug.result %></td>
    <td><%= bug.expected_result %></td>
    <td><%= bug.status %></td>
    <td><%= bug.project %></td>
    <td><%= link_to 'Show', [bug.project, bug] %></td>
    <td><%= link_to 'Edit', edit_project_bug_path(bug.project, bug) %></td>
    <td><%= link_to 'Destroy', [bug.project, bug], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bug', new_project_bug_path(params[:project_id]) %>
